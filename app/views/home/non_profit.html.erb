<div class="form-style-2">
  <div class="form-style-2-heading">非営利会員登録</div>
  <%= form_tag("/recruit/non_profit_create") do %>
  <form>
    <label for="field1" style="color: red;">
        <% @sender.errors.full_messages.each do |message| %>
        <%= message %><br>
        <% end %>
    </label>
    <label for="field1"><span>店舗名または名称<span class="required">*</span></span><input type="text" class="input-field" name="shopname" value="<%= @sender.shopname %>" /></label>
    <label for="field2"><span>よみがな <span class="required">*</span></span><input type="text" class="input-field" name="yomi" value="<%= @sender.yomi %>" /></label>     
