

<div class="owner_table_content">
<%= link_to("戻る", "/owner/index") %>

<table>
	<tr class="owner_table_top">
		<td>日時</th>
		<td>種別</td>
		<td>店舗名</td>
		<td>都道府県</td>
	</tr>
<% @sender.each do |sender| %>
  <tr>

  	<td class="owner_table_th">
  		<%= link_to(sender.created_at.strftime('%Y/%m/%d %H:%M'), "/owner/#{sender.id}") %>
  	</td>

    <% if sender.category == 0 %>
		<td>無料</td>
	<% elsif %>
	<% sender.category == 1 %>
		<td style="color: red;">有料</td>
	<% elsif %>
	<% sender.category == 2 %>
		<td>非営利</td>
	<% elsif %>
	<% sender.category == 3 %>
		<td style="color: red;">広告申込・問合せ</td>
	<% elsif %>
	<% sender.category == 4 %>
		<td style="color: green;">会員問合せ</td>
	<% else %>
		<td>no_category</td>
	<% end %>		
    
    <td><%= sender.shopname %></td>
    <td><%= sender.area %></td>
  
  </tr>
<% end %>
</table>

</div>
<div class="paginate"><%= paginate @sender %></div>

