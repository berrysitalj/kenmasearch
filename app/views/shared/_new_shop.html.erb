<div class="contentsNewPost">
  <h2 class="contentsNewPost__head">新着店舗情報</h2>
  <div class="contentsNewPost__inner">
  	<% @shops_new_top.first(5).each do |shop| %>
	  <div class="contentsNewPost__item">
	  	<div class="contentsNewPost__item__head">
	  		<!-- その他情報 -->
        <% if shop.freeicon21 == true %>
        <a class="contentsNewPost__item__tag" style="white-space: nowrap; background-color: #DDDDDD;"><td>禁煙</td></a>
        <% else %>
        <% end %>

        <% if shop.freeicon22 == true %>
        <a class="contentsNewPost__item__tag" style="white-space: nowrap; background-color: #DDDDDD;"><td>喫煙可</td></a>
        <% else %>
        <% end %>

        <% if shop.freeicon23 == true %>
        <a class="contentsNewPost__item__tag" style="white-space: nowrap; background-color: #DDDDDD;"><td>セット</td></a>
        <% else %>
        <% end %>

        <% if shop.freeicon25 == true %>
        <a class="contentsNewPost__item__tag" style="white-space: nowrap; background-color: #DDDDDD;"><td>要予約</td></a>
        <% else %>
        <% end %>

        <!-- 麻雀の種類 -->
        <% if shop.freeicon14 == true %>
        <a class="contentsNewPost__item__tag" style="white-space: nowrap; background-color: #FFCC33;"><td>競技麻雀</td></a>
        <% else %>
        <% end %>

        <% if shop.freeicon13 == true %>
        <a class="contentsNewPost__item__tag" style="white-space: nowrap;"><td>麻雀教室</td></a>
        <% else %>
        <% end %>

        <% if shop.freeicon12 == true %>
        <a class="contentsNewPost__item__tag" style="white-space: nowrap; background-color: #FFFF99;"><td>ノーレートフリー</td></a>
        <% else %>
        <% end %>

        <% if shop.freeicon11 == true %>
        <a class="contentsNewPost__item__tag" style="white-space: nowrap;"><td>健康麻雀</td></a>
        <% else %>
        <% end %>

	  		<!-- 場所 -->
        <% if shop.freeicon1 == true %>
        <a class="contentsNewPost__item__tag" style="white-space: nowrap;"><td>麻雀店</td></a>
        <% elsif %>
        <% shop.freeicon2 == true %>
        <a class="contentsNewPost__item__tag" style="white-space: nowrap; background-color: #CCFFFF;"><td>公共施設</td></a>
        <% elsif %>
        <% shop.freeicon3 == true %>
        <a class="contentsNewPost__item__tag" style="white-space: nowrap;"><td>サークル・個人</td></a>
        <% else %>
        <a class="contentsNewPost__item__tag" style="white-space: nowrap;"><td>その他の場所</td></a>
        <% end %>        
		  		                
	      <h3><a class="contentsNewPost__item__title" href="/shops/<%= shop.userid %>"><%= link_to(shop.shopname, "/shops/#{shop.userid}") %></a></h3>
		  </div>
		
		  <div class="contentsNewPost__item__flex">
		    <a class="contentsNewPost__item__img" href="/shops/<%= shop.userid %>">
			  <% if shop.topphoto == "" %>
	        <img src="/topphoto_images/default_user.png" alt="">
        <% elsif shop.topphoto == nil %>
          <img src="/topphoto_images/default_user.png" alt="">
        <% else %>
          <img src="/topphoto_images/<%= shop.topphoto %>" alt="">
        <% end %>
		    </a>
		    <div class="contentsNewPost__item__desc">
		      <p class="contentsNewPost__item__desc__arddres"><span><%= shop.addres1 %></span><%= shop.area %></p>
		      <p><%=safe_join(shop.topcomment.split("\n"),tag(:br))%></p>
		    </div>

		  </div>
		
		  <div class="contentsNewPost__item__btn__inner">
		    <a class="contentsNewPost__item__btn" href="/shops/<%= shop.userid %>">店舗詳細はこちら</a>
		  </div>
	  </div>
	  <% end %>					
	</div>
</div>